{
  "name": "ryan-pretzer-portfolio",
  "version": "1.0.0",
  "description": "Portfolio website for Ryan Andrew Pretzer - Mobile Product Strategist",
  "main": "index.html",
  "scripts": {
    "start": "http-server -p 8080",
    "build": "npm run build:css && npm run build:js && npm run build:images && npm run build:html",
    "build:css": "postcss styles/main.css -o dist/styles.min.css",
    "build:js": "rollup -c",
    "build:images": "imagemin images/* --out-dir=dist/images",
    "build:html": "html-minifier --input-dir . --output-dir dist --file-ext html",
    "dev": "concurrently \"npm run watch:css\" \"npm run watch:js\" \"npm run start\"",
    "watch:css": "postcss styles/main.css -o dist/styles.min.css --watch",
    "watch:js": "rollup -c -w",
    "clean": "rm -rf dist",
    "lint": "eslint scripts/**/*.js",
    "lint:css": "stylelint styles/**/*.css",
    "test": "jest",
    "deploy": "npm run build && gh-pages -d dist"
  },
  "keywords": [
    "portfolio",
    "mobile strategy",
    "design systems",
    "product management"
  ],
  "author": "Ryan Andrew Pretzer",
  "license": "MIT",
  "devDependencies": {
    "@rollup/plugin-node-resolve": "^15.0.0",
    "@rollup/plugin-terser": "^0.4.0",
    "autoprefixer": "^10.4.0",
    "concurrently": "^7.6.0",
    "cssnano": "^5.1.0",
    "eslint": "^8.0.0",
    "gh-pages": "^5.0.0",
    "html-minifier": "^4.0.0",
    "http-server": "^14.1.0",
    "imagemin": "^8.0.0",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^9.0.0",
    "imagemin-svgo": "^10.0.0",
    "jest": "^29.0.0",
    "postcss": "^8.4.0",
    "postcss-cli": "^10.0.0",
    "postcss-import": "^15.0.0",
    "postcss-preset-env": "^8.0.0",
    "rollup": "^3.0.0",
    "stylelint": "^15.0.0",
    "stylelint-config-standard": "^30.0.0"
  },
  "dependencies": {
    "marked": "^4.2.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ],
  "jest": {
    "testEnvironment": "jsdom",
    "moduleFileExtensions": [
      "js",
      "json"
    ],
    "transform": {
      "^.+\\.js$": "babel-jest"
    }
  }
}